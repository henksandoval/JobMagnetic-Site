{
  "name": "my-site",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:en": "ng serve --configuration=en",
    "start:es": "ng serve --configuration=es",
    "build": "ng build",
    "watch": "ng build --watch --configuration=development",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:autofix": "run-p lint:fix prettier:write",
    "prettier:write": "prettier --write \"**/*.{ts,html,js,json,md,yml,yaml}\"",
    "validate": "run-s lint test",
    "i18": "ng extract-i18n"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.1",
    "@angular/common": "^19.2.1",
    "@angular/compiler": "^19.2.1",
    "@angular/core": "^19.2.1",
    "@angular/forms": "^19.2.1",
    "@angular/platform-browser": "^19.2.1",
    "@angular/platform-browser-dynamic": "^19.2.1",
    "@angular/router": "^19.2.2",
    "animate.css": "^4.1.1",
    "glightbox": "^3.3.1",
    "ngx-owl-carousel-o": "^19.0.0",
    "ngx-page-scroll": "^14.0.1",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^19.2.1",
    "@angular/cli": "^19.2.1",
    "@angular-devkit/build-angular": "^19.2.1",
    "@angular/compiler-cli": "^19.2.1",
    "@angular/localize": "^19.2.1",
    "@testing-library/angular": "^17.3.6",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "angular-eslint": "19.2.1",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^14.5.3",
    "ng-mocks": "^14.13.3",
    "npm-run-all": "^4.1.5",
    "prettier": "3.5.3",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.26.1"
  }
}
